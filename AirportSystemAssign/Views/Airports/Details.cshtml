@model AirportSystemAssign.Models.Airport

@{
    ViewBag.Title = "Details";
}
<div class="sidebar">
    <h2 class="whitetext">Details for @Html.DisplayFor(model => model.Name)</h2>
    <div class="whitetext" id="AirportDetails">
        <h4>Airplanes at @Html.DisplayFor(model => model.Name)</h4>



        <table class="table">
            <tr>
                <th>
                    @*@Html.DisplayNameFor(model => model.Name)*@ Airplanes Name
                    <a class="addlink" href="/Airplanes/Create?airportid=@Model.Id"><span class="glyphicon glyphicon-plus"></span></a>
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.Airplane)
            {
                <tr>

                    <td>
                        <a class="whitetext" href="/Airplanes/Details/@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>

                    </td>
                    <td></td>
                    <td>
                        <a class="addlink" href="/Airplanes/TransferAirplane?id=@item.Id"><span class="glyphicon glyphicon-plane"></span>Transfer</a> |
                        <a class="addlink" href="/Airplanes/Delete/@item.Id"><span class="glyphicon glyphicon-trash"></span></a>


                    </td>
                </tr>
            }

        </table>

        <p>
            @Html.ActionLink("Back to List", "Index")
        </p>
    </div>
</div>