@model AirportSystemAssign.Models.Airplane

@{
    ViewBag.Title = "Details";
}

<h2 class="whitetext">Details of @Html.DisplayFor(model => model.Name)</h2>

<div class="whitetext">

    <hr />
    <dl class="dl-horizontal">
        <dt>
            Type
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AirplaneType.Name)

        </dd>

        <dt>
            Airport
        </dt>

        <dd>
            @Html.DisplayName(Model.Airport.Name)
           
        </dd>

        <dt>
            Size in Meters
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Size)
        </dd>

        <dt>
            Max Passengers
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaxNrOfPassengers)
        </dd>

    </dl>

</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to Airport", "Details", "Airports", new { id = Model.AirportId }, null)
</p>
