@model IEnumerable<AirportSystemAssign.Models.Airplane>

@{
    ViewBag.Title = "Index";
}

<h2 class="whitetext">All Airplanes</h2>

<table class="table whitetext">
    <tr>
        <th>
            Name
        </th>
        <th>
            Airport
        </th>
        <th>
            pilot
        </th>
        <th>
            Copilot
        </th>
        <th>
            Maxnumberpassenger
        </th>
        <th>
            size
        </th>
        <th>
            Airplanetype
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Airport.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pilot.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CoPilot.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxNrOfPassengers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AirplaneType.Name)
            </td>
            <td>
                <a class="iconlinks" href="/Airplanes/Delete/@item.Id"><span class="glyphicon glyphicon-trash"></span></a>
                <a class="iconlinks" href="/Airplanes/Edit/@item.Id"><span class="glyphicon glyphicon-pencil"></span></a>
                <a class="iconlinks" href="/Airplanes/RemovePilots/@item.Id"><span class="glyphicon glyphicon-minus"></span><span class="glyphicon glyphicon-user"></span></a>
                    


            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Back to Airports", "Index", "Airports")
</div>